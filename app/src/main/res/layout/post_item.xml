<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="post"
            type="com.example.nibali.constraint_examples.entity.Post" />
    </data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:imageUrl="@{post.owner.photo}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/TextViewBlack"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text="@{post.owner.name}"
        app:layout_constraintStart_toEndOf="@+id/userImageView"
        app:layout_constraintTop_toTopOf="@+id/userImageView" />

    <TextView
        android:id="@+id/nickNameTextView"
        style="@style/TextViewGray"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/nameTextView"
        app:layout_constraintStart_toEndOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/creationDateTextView"
        style="@style/TextViewGray"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:datetime="@{post.date}"
        app:layout_constraintBaseline_toBaselineOf="@+id/nickNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/nickNameTextView" />

    <TextView
        android:id="@+id/contentTextView"
        style="@style/TextViewBlack"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@{post.text}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toEndOf="@+id/userImageView"
        app:layout_constraintTop_toBottomOf="@+id/nickNameTextView" />

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView"
        app:layout_constraintStart_toStartOf="@+id/contentTextView"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        app:imageUrl="@{post.getMainPhoto()}"
        android:contentDescription="@string/post_image" />

    <Button
        android:id="@+id/retweetButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_repeat_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/contentTextView"
        app:layout_constraintTop_toBottomOf="@+id/postImageView" />

    <TextView
        android:id="@+id/retweetTextView"
        style="@style/TextViewBlack"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:longText="@{post.reposts}"
        app:layout_constraintBaseline_toBaselineOf="@+id/retweetButton"
        app:layout_constraintStart_toEndOf="@+id/retweetButton" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ic_favorite_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/retweetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/retweetTextView"
        app:layout_constraintTop_toTopOf="@+id/retweetButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/likeTextView"
        style="@style/TextViewBlack"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:longText="@{post.likes}"
        app:layout_constraintBaseline_toBaselineOf="@+id/likeButton"
        app:layout_constraintStart_toEndOf="@+id/likeButton" />


</android.support.constraint.ConstraintLayout>
</layout>